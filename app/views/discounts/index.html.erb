
<div class='mx-4'>
    <h4>DANH SÁCH MÃ GIẢM GIÁ
    </h4>
    <div class="card mt-2">
        <div class="card-body">
            <table class="table table-hove0r">
                <thead>
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">Tên</th>
                        <th scope="col">Phần trăm giảm</th>
                        <th scope="col">Ngày bắt đầu</th>
                        <th scope="col">Ngày kết thúc</th>
                        <th colspan="2" class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    <% @discounts.each do |discount| %>
                    <tr>
                        <td><%= discount.id%></td>
                        <td><%= discount.name %></td>
                        <td><%= discount.percent %>%</td>
                        <td><%= discount.starts_at%></td>
                        <td><%= discount.ends_at%></td>
                        <td class="text-center"><%= link_to "Sửa",  edit_discount_path(discount.id), class: 'btn btn-brand'%></td>
                        <td class="text-center"> <%= link_to "Xoá", discount_path(discount.id), method: :delete,
                                data: { confirm: "Xác nhận xoá thể loại ?" } , class: 'btn btn-secondary'%></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>