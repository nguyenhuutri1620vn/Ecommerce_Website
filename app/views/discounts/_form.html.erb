<div class="card">
  <div class="card-body">
      <%= form_with model: @discount do |form| %>
        <div class="form-group">
          <%= form.label :'Tên mã giảm giá' %>
          <%= form.text_field :name , autofocus: true, class: "form-control"%>
          <% @discount.errors.messages_for(:name).each do |message| %>
            <div class='text-danger'><%= message %></div>
          <% end %>
        </div>

        <div class="form-group">
          <%= form.label :'Phẩn trăm giảm (%)' %>
          <%= form.text_field :percent , autofocus: true, class: "form-control"%>
          <% @discount.errors.messages_for(:percent).each do |message| %>
            <div class='text-danger'><%= message %></div>
          <% end %>
        </div>

        <div class="form-group">
          <%= form.label :'Ngày bắt đầu' %>
          <%= form.text_field :starts_at , autofocus: true, class: "form-control", type: :date%>
          <% @discount.errors.messages_for(:starts_at).each do |message| %>
            <div class='text-danger'><%= message %></div>
          <% end %>
        </div>

         <div class="form-group">
          <%= form.label :'Ngày kết thúc' %>
          <%= form.text_field :ends_at , autofocus: true, class: "form-control", type: :date%>
          <% @discount.errors.messages_for(:ends_at).each do |message| %>
            <div class='text-danger'><%= message %></div>
          <% end %>
        </div>

        <div>
          <%= form.submit :Thêm, class: 'btn btn-primary'%>
        </div>
      <% end %>
  </div>
</div>