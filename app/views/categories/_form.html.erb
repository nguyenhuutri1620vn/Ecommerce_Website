<div class="card">
  <div class="card-body">
      <%= form_with model: @categories do |form| %>
        <div class="form-group">
          <%= form.label :'Tên thể loại' %>
          <%= form.text_field :name , autofocus: true, class: "form-control"%>
        </div>

        <div class="form-group">
          <%= form.check_box :status, class:'mt-2' %>
          <%= form.label :Hiện%>
        </div>
        <div>
          <%= form.submit :Thêm, class: 'btn btn-primary'%>
        </div>
      <% end %>
  </div>
</div>