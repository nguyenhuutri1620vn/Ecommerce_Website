
<div class='mx-4'>
    <h4>DANH SÁCH LOẠI SẢN PHẨM
    </h4>
    <div class="card mt-2">
        <div class="card-body">
            <table class="table table-hove0r">
                <thead>
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">Tên</th>
                        <th scope="col">Trạng thái</th>
                        <th colspan="2" class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    <% @categories.each do |categories| %>
                    <tr>
                        <td><%= categories.id%></td>
                        <td><%= categories.name %></td>
                        <td><%= categories.status === true ? 'Hiện': 'Ẩn'%></td>
                        <td class="text-center"><%= link_to "Sửa",  "/categories/#{categories.id}/edit", class: 'btn btn-brand'%></td>
                        <td class="text-center"> <%= link_to "Xoá", "/categories/#{categories.id}", method: :delete,
                                data: { confirm: "Xác nhận xoá thể loại ?" } , class: 'btn btn-secondary'%></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>