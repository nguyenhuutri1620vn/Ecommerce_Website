<div class="container">
    <div class="menu">
        <strong>MENU</strong>
        <ul>
            <li><a href="/profile">Thông tin cá nhân</a></li>
            <li><a href="/profile/change-pass-customer"> Đổi mật khẩu </a></li>
            <li><a href="/profile/orderhistory"> Lịch sử đơn hàng </a></li>
        </ul>
    </div>
    <div class="content" >
        <h1>Lịch sử đơn hàng</h1>
        <div class="card mt-2">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Mã Đơn</th>
                        <th scope="col">Tổng Số Sản Phẩm</th>
                        <th scope="col">Thành Tiền</th>
                        <th scope="col">Ngày mua</th>
                        <th scope="col">Trạng Thái</th>
                        <th scope="col">Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    <% @orders.each do |order| %>
                            <tr>
                                <td><%= order.id%></td>
                                <td><%= order.quantity%></td>
                                <td><%= number_to_currency(order.total_price, unit: "vn₫",format: "%n %u")%></td>
                                <td><%= order.created_at.strftime('%d/%m/%Y') %></td>
                                <td><%= order.status === 1 ? "Đã duyệt": "Chưa duyệt"%></td>
                                <td><%= link_to 'Chi tiết', "/profile/orderdetail/#{order.id}" , :class=> 'btn btn-brand'%></td>
                            </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
    </div>
