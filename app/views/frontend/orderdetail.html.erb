                    <th scope="col">Số Lượng</th>
                    <th scope="col">Đơn Giá</th>
                </tr>
            </thead>
            <tbody>
                <% sum = 0 %>
                <% @orderdetails.each do |order| %>
                    <tr>
                        <td><%= order.product_id%></td>
                        <td><%= order.product.name%></td>
                        <td><%= order.quantity%></td>
                        <td><%= number_to_currency(order.price, unit: "vn₫",format: "%n %u")%></td>
                    </tr>
                <% end %>
            </tbody>
            </table>
        </div>
    </div>
