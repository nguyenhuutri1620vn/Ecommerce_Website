<div class="container">
    <div class="menu">
        <strong>MENU</strong>
        <ul>
            <li><a href="/profile">Thông tin cá nhân</a></li>
            <li><a href="/profile/change-pass-customer"> Đổi mật khẩu </a></li>
            <li><a href="/profile/orderhistory"> Lịch sử đơn hàng </a></li>
        </ul>
    </div>
    <div class="content" >
        <h1>Cập nhật thông tin</h1>
        <%= form_with url: "/profile/editprofile", model: @current_user do |form| %>
        <div class="form-group">
            <%= form.label :'Họ và tên' %>
            <%= form.text_field :full_name , class: "form-control", placeholder: 'Nhập họ và tên..'%>
        </div>
        <% @current_user.errors.messages_for(:full_name).each do |message| %>
            <div class='text-danger'><%= message %></div>
        <% end %>
        <div class="form-group">
            <%= form.label :'Số điện thoại (+84)'%>
            <%= form.text_field :phone , class: "form-control", placeholder: 'Nhập số điện thoại..'%>
        </div>
        <% @current_user.errors.messages_for(:phone).each do |message| %>
            <div class='text-danger'><%= message %></div>
        <% end %>
        <div class="form-group">
            <%= form.label :'Địa chỉ' %>
            <%= form.text_field :address , class: "form-control", placeholder: 'Nhập địa chỉ..'%>
        </div>
        <% @current_user.errors.messages_for(:address).each do |message| %>
            <div class='text-danger'><%= message %></div>
        <% end %>
        <div>
            <%= form.submit :'Cập nhật', class: 'btn btn-primary'%>
        </div>
        <% end %>
    </div>
</div>
